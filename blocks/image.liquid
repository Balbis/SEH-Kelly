

{% liquid
  assign ratio = 1

  case block.settings.image_ratio
    when 'landscape'
      assign ratio = '16 / 9'
    when 'portrait'
      assign ratio = '4 / 5'
    when 'adapt'
      assign ratio = block.settings.image.aspect_ratio
  endcase

  if ratio == 0 or ratio == null
    assign ratio = 1
  endif
%}

{% capture class %}
  image-block image-block--{{ block.id }} image-block--height-{{ block.settings.height }} spacing-style size-style
{% endcapture %}

{% capture style %}
  --ratio: {{ ratio }};
  {% render 'size-style', settings: block.settings %}
  {% render 'spacing-style', settings: block.settings %}
{% endcapture %}

{% capture image_border_style %}
  --ratio: {{ ratio }};
  {% render 'border-override', settings: block.settings %}
{% endcapture %}

{% liquid
  assign media_width_desktop = '100vw'
  assign media_width_mobile = '100vw'
  assign sizes = 'auto, (min-width: 750px) ' | append: media_width_desktop | append: ', ' | append: media_width_mobile
  assign widths = '300, 450, 600, 750, 900, 1050, 1200, 1350, 1500, 1650, 1800, 1950, 2000, 2500, 3000, 3500, 4000, 5000'
%}

{% liquid
  assign image_count = 0
  
  if block.settings.image_mode == 'multiple'
    assign image_ids = ''
    
    if block.settings.image != blank
      assign image_ids = image_ids | append: block.settings.image.id | append: ','
      assign image_count = image_count | plus: 1
    endif
    
    if block.settings.image_2 != blank
      assign image_ids = image_ids | append: block.settings.image_2.id | append: ','
      assign image_count = image_count | plus: 1
    endif
    
    if block.settings.image_3 != blank
      assign image_ids = image_ids | append: block.settings.image_3.id | append: ','
      assign image_count = image_count | plus: 1
    endif
    
    if block.settings.image_4 != blank
      assign image_ids = image_ids | append: block.settings.image_4.id | append: ','
      assign image_count = image_count | plus: 1
    endif
  endif
%}

{% capture image %}
  {%- if block.settings.image_mode == 'multiple' and image_count > 0 -%}
    <div class="image-block__rotating-container" data-block-id="{{ block.id }}" data-images="{{ image_ids | remove_last: ',' }}">
      {%- if block.settings.image != blank -%}
        <div class="image-block__image border-style image-block__rotating-image" data-image-index="0" style="{{ image_border_style }}">
          {{
            block.settings.image
            | image_url: width: 3840
            | image_tag:
              width: block.settings.image.width,
              widths: widths,
              height: block.settings.image.height,
              class: 'image-block__image',
              sizes: sizes
          }}
        </div>
      {%- endif -%}
      {%- if block.settings.image_2 != blank -%}
        <div class="image-block__image border-style image-block__rotating-image" data-image-index="1" style="{{ image_border_style }}">
          {{
            block.settings.image_2
            | image_url: width: 3840
            | image_tag:
              width: block.settings.image_2.width,
              widths: widths,
              height: block.settings.image_2.height,
              class: 'image-block__image',
              sizes: sizes
          }}
        </div>
      {%- endif -%}
      {%- if block.settings.image_3 != blank -%}
        <div class="image-block__image border-style image-block__rotating-image" data-image-index="2" style="{{ image_border_style }}">
          {{
            block.settings.image_3
            | image_url: width: 3840
            | image_tag:
              width: block.settings.image_3.width,
              widths: widths,
              height: block.settings.image_3.height,
              class: 'image-block__image',
              sizes: sizes
          }}
        </div>
      {%- endif -%}
      {%- if block.settings.image_4 != blank -%}
        <div class="image-block__image border-style image-block__rotating-image" data-image-index="3" style="{{ image_border_style }}">
          {{
            block.settings.image_4
            | image_url: width: 3840
            | image_tag:
              width: block.settings.image_4.width,
              widths: widths,
              height: block.settings.image_4.height,
              class: 'image-block__image',
              sizes: sizes
          }}
        </div>
      {%- endif -%}
    </div>
  {%- elsif block.settings.image != blank -%}
    {{
      block.settings.image
      | image_url: width: 3840
      | image_tag:
        width: block.settings.image.width,
        widths: widths,
        height: block.settings.image.height,
        class: 'image-block__image border-style',
        style: image_border_style,
        sizes: sizes
    }}
  {%- else -%}
    <div class="placeholder-image border-style size-style" style="{{ image_border_style }}">
      <placeholder-image
        data-block-id="{{ block.id }}"
        data-type="general"
      ></placeholder-image>
    </div>
  {%- endif -%}
{% endcapture %}

{% if block.settings.link == blank %}
  <div
    class="{{ class }}"
    style="{{ style }}"
    {{ block.shopify_attributes }}
  >
    {{ image }}
  </div>
{% else %}
  <a
    href="{{ block.settings.link }}"
    class="{{ class }}"
    style="{{ style }}"
    {{ block.shopify_attributes }}
  >
    {{ image }}
  </a>
{% endif %}

{% stylesheet %}
  .placeholder-image {
    position: relative;
    aspect-ratio: var(--ratio);
    overflow: hidden;
  }

  placeholder-image img {
    width: 100%;
    height: 100%;
    aspect-ratio: var(--ratio);
  }

  .image-block {
    display: flex;

    /* When the image is nested in a group, section, etc, respect the parent's horizontal alignment */
    justify-content: var(--horizontal-alignment, 'inline-start');
  }

  .image-block--height-fill .image-block__image {
    height: 100%;
  }

  .image-block__image {
    object-fit: cover;
    aspect-ratio: var(--ratio);
  }

  .image-block__rotating-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .image-block__rotating-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .image-block__rotating-image.active {
    opacity: 1;
  }

  .image-block__rotating-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: var(--ratio);
  }
{% endstylesheet %}

