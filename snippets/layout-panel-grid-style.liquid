{%- liquid
  comment
    Intended for sections that use grid layout.

    Accepts:
      settings: {section.settings}
  endcomment
-%}

{% render 'gap-style', value: settings.gap %}

--grid-columns: {{ settings.grid_columns | default: 1 }};
{% if settings.grid_columns_mobile %}
  --grid-columns-mobile: {{ settings.grid_columns_mobile }};
{% endif %}

{% if settings.grid_alignment %}
  --grid-alignment: {{ settings.grid_alignment }};
{% endif %}

{% if settings.grid_justify %}
  --grid-justify: {{ settings.grid_justify }};
{% endif %} 